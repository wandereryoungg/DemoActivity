<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_reboot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="reboot"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_hotspot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hotspot"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="preview"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_img_reader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="image reader preview"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_media_decoder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="media decoder"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_mem_leak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mem leak"
                android:textAllCaps="false" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>